{
  "name": "@anvilco-pkg/package-ops",
  "version": "0.0.0",
  "description": "Set up a new Node package with all the goodies and ready to be exported/imported to any project.",
  "repository": "git@github.com:fostimus/package-ops.git",
  "author": "Derek Foster <derekfoster94@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "dist/index.js",
  "bin": {
    "release": "./scripts/release.js"
  },
  "files": [
    "config/**",
    "scripts/**"
  ],
  "scripts": {
    "build": "swc src -d dist --strip-leading-paths",
    "build:watch": "yarn build --watch",
    "clean": "rimraf dist",
    "clean:build": "yarn clean && yarn build",
    "prepack": "yarn clean:build",
    "format": "prettier --write 'src/**/*.js'",
    "lint": "eslint 'scripts/**/*.js'",
    "lint:fix": "yarn lint --fix",
    "lint:quiet": "NODE_ENV=test yarn lint --quiet",
    "lint:quiet:fix": "yarn lint:quiet --fix",
    "release": "release-it"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/eslint-parser": "^7.28.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.12.9",
    "@swc/register": "0.1.10",
    "app-module-path": "^2.1.0",
    "bdd-lazy-var": "^2.6.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-nicenice": "^4.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-mocha": "^10.4.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-svg-jsx": "^1.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "lodash": "^4.17.21",
    "mocha": "^9.2.2",
    "prettier": "^3.2.5",
    "release-it": "^19.0.3",
    "rimraf": "^6.0.1",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.5.0"
  }
}
